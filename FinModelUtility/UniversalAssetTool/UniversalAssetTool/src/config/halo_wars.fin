in (halo_wars) {
  // Rips maps
  in (scenario/skirmish/design) {
    ineach (* as $MAP_NAME) {
      addXtd(
        $MAP_NAME + '.xtd',
        $MAP_NAME + '.xtt');
    }
  }

  // Rips characters/scenery
  ineachrecursive (art/*) {
    foreach(*.vis as $VIS_FILE) {
      addVis($visFile);
    }
  }
}

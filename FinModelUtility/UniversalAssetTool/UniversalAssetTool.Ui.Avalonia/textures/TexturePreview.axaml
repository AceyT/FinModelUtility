<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:textures="clr-namespace:uni.ui.avalonia.textures"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="uni.ui.avalonia.textures.TexturePreview"
             x:DataType="textures:TexturePreviewViewModel">
  <Design.DataContext>
    <textures:TexturePreviewViewModelForDesigner />
  </Design.DataContext>

  <Grid>
    <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="1"
            BorderBrush="LightGray">
      <Border.Background>
        <ImageBrush
          AlignmentX="Left"
          AlignmentY="Top"
          Source="{Binding TransparentBackgroundImage}"
          TileMode="Tile"
          DestinationRect="0 0 32 32" />
      </Border.Background>
    </Border>

    <Image x:Name="image_"
           Margin="{Binding ImageMargin}"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch"
           Source="{Binding Image}"
           RenderOptions.BitmapInterpolationMode="None" />
  </Grid>
</UserControl>
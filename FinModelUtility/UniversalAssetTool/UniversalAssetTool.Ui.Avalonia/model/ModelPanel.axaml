<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:uni.ui.avalonia.model"
             xmlns:materials="clr-namespace:uni.ui.avalonia.model.materials"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:Class="uni.ui.avalonia.model.ModelPanel"
             x:DataType="model:ModelPanelViewModel">
  <Design.DataContext>
    <model:ModelPanelViewModelForDesigner />
  </Design.DataContext>

  <TabControl Classes="h2"
              Padding="16 8">
    <TabItem Header="Info" />
    <TabItem Header="Skeleton" />
    <TabItem Header="Animations" />
    <TabItem Header="Materials" >
      <materials:MaterialsPanel DataContext="{Binding MaterialsPanel}" />
    </TabItem>
    <TabItem Header="Textures" />
    <TabItem Header="Registers" />
  </TabControl>
</UserControl>
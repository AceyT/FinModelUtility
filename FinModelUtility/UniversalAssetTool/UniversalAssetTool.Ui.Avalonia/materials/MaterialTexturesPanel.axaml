<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gb="clr-namespace:GroupBox.Avalonia.Controls;assembly=GroupBox.Avalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materials="clr-namespace:uni.ui.avalonia.materials"
             xmlns:controls="clr-namespace:uni.ui.avalonia.common.controls"
             xmlns:textures="clr-namespace:uni.ui.avalonia.textures"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="uni.ui.avalonia.materials.MaterialTexturesPanel"
             x:DataType="materials:MaterialTexturesPanelViewModel">
  <Design.DataContext>
    <materials:MaterialTexturesPanelViewModelForDesigner />
  </Design.DataContext>

  <gb:GroupBox Classes="h3"
               Header="Textures"
               Theme="{StaticResource GroupBoxClassic}">
    <Grid ColumnDefinitions="200 * ">
      <!-- Texture viewer -->
      <controls:If Condition="{Binding SelectedTexturePreview, Converter={x:Static ObjectConverters.IsNotNull}}">
        <StackPanel>
          <textures:TexturePreview
            DataContext="{Binding SelectedTexturePreview}"
            Width="150"
            Height="150" />
          <TextBlock Classes="h4"
                     Text="{Binding SelectedTexturePreview.Texture.Name}"
                     HorizontalAlignment="Center"
                     TextTrimming="CharacterEllipsis" />
        </StackPanel>
      </controls:If>

      <!-- Textures list -->
      <ListBox Grid.Column="1"
               ItemsSource="{Binding Textures}"
               Background="Transparent"
               SelectionMode="AlwaysSelected"
               SelectedItem="{Binding SelectedTexture}">
        <ListBox.Styles>
          <Style Selector="ListBoxItem">
            <Setter Property="Height" Value="36" />
          </Style>
        </ListBox.Styles>

        <ListBox.ItemTemplate>
          <DataTemplate>
            <DockPanel>
              <textures:TexturePreview
                DockPanel.Dock="Left"
                DataContext="{Binding TexturePreview}"
                Width="32"
                Height="32" />
              <TextBlock DockPanel.Dock="Top"
                         Text="{Binding Texture.Name}"
                         Height="24"
                         Margin="8 0 0 0" />
              <TextBlock DockPanel.Dock="Bottom"
                         Classes="caption"
                         Text="{Binding Caption}"
                         Height="16"
                         Margin="8 0 0 0" />
            </DockPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Grid>
  </gb:GroupBox>
</UserControl>
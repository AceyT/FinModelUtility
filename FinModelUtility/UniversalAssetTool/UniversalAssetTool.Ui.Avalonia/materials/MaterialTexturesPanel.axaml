<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gb="clr-namespace:GroupBox.Avalonia.Controls;assembly=GroupBox.Avalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materials="clr-namespace:uni.ui.avalonia.materials"
             xmlns:controls="clr-namespace:uni.ui.avalonia.common.controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="uni.ui.avalonia.materials.MaterialTexturesPanel"
             x:DataType="materials:MaterialTexturesPanelViewModel">
  <Design.DataContext>
    <materials:MaterialTexturesPanelViewModelForDesigner />
  </Design.DataContext>

  <gb:GroupBox Classes="h3"
               Header="Textures"
               Theme="{StaticResource GroupBoxClassic}">
    <Grid ColumnDefinitions="200 * ">
      <!-- Texture viewer -->
      <controls:If Condition="{Binding SelectedTexture, Converter={x:Static ObjectConverters.IsNotNull}}">
        <StackPanel>
          <Grid Width="{Binding SelectedTextureViewerSize}"
                Height="{Binding SelectedTextureViewerSize}">
            <Border HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
              <Border.Background>
                <ImageBrush
                  AlignmentX="Left"
                  AlignmentY="Top"
                  Source="{Binding TransparentBackgroundImage}"
                  Stretch="None"
                  DestinationRect="0 0 24 24"
                  TileMode="Tile" />
              </Border.Background>
            </Border>

            <Image VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Width="{Binding SelectedTextureImageSize}"
                   Height="{Binding SelectedTextureImageSize}"
                   Source="{Binding SelectedTexture.Image}" />
          </Grid>
          <TextBlock Classes="h4"
                     Text="{Binding SelectedTexture.Texture.Name}"
                     HorizontalAlignment="Center"
                     TextTrimming="CharacterEllipsis" />
        </StackPanel>
      </controls:If>

      <!-- Textures list -->
      <ListBox Grid.Column="1"
               ItemsSource="{Binding Textures}"
               Background="Transparent"
               SelectionMode="AlwaysSelected"
               SelectedItem="{Binding SelectedTexture}">
        <ListBox.Styles>
          <Style Selector="ListBoxItem">
            <Setter Property="Height" Value="36" />
          </Style>
        </ListBox.Styles>

        <ListBox.ItemTemplate>
          <DataTemplate>
            <DockPanel>
              <Image DockPanel.Dock="Left"
                     Width="32"
                     Height="32"
                     Source="{Binding Image}" />
              <TextBlock DockPanel.Dock="Top"
                         Text="{Binding Texture.Name}"
                         Height="24"
                         Margin="8 0 0 0" />
              <TextBlock DockPanel.Dock="Bottom"
                         Classes="caption"
                         Text="{Binding Caption}"
                         Height="12"
                         Margin="8 0 0 0" />
            </DockPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Grid>
  </gb:GroupBox>
</UserControl>
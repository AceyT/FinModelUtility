<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gb="clr-namespace:GroupBox.Avalonia.Controls;assembly=GroupBox.Avalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materials="clr-namespace:uni.ui.avalonia.materials"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="uni.ui.avalonia.materials.MaterialTexturesPanel"
             x:DataType="materials:MaterialTexturesPanelViewModel">
  <Design.DataContext>
    <materials:MaterialTexturesPanelViewModelForDesigner />
  </Design.DataContext>

  <gb:GroupBox Classes="h3"
               Header="Textures"
               Theme="{StaticResource GroupBoxClassic}">
    <ListBox ItemsSource="{Binding Textures}"
             Background="Transparent">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <Image Width="24" Height="24" Source="{Binding Image}" />
            <TextBlock Text="{Binding Texture.Name}"
                       Padding="8 0 0 0"
                       VerticalAlignment="Center" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </gb:GroupBox>
</UserControl>
<UserControl x:Class="uni.ui.wpf.common.treeView.FilterTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:uni.ui.wpf.common.treeView"
             xmlns:textbox="clr-namespace:uni.ui.wpf.common.textbox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition MaxHeight="24" MinHeight="24" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <textbox:TextBoxWithPlaceholder Placeholder="Search for..." />
    <TreeView Grid.Row="1" />
  </Grid>
</UserControl>

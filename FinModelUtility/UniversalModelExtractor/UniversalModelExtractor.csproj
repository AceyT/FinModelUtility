<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>uni</RootNamespace>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
    <DebugType>embedded</DebugType>
    <SelfContained>true</SelfContained>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    <PublishSingleFile Condition="'$(Configuration)' == 'Release'">true</PublishSingleFile>
    <!--<PublishTrimmed>true</PublishTrimmed>-->
    <Product>universal_model_extractor</Product>
    <AssemblyName>universal_model_extractor</AssemblyName>
    <StartupObject>uni.cli.Cli</StartupObject>
    <UserSecretsId>7016d56f-b424-467d-8b3a-40e5d0483f29</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".editorconfig" />
    <None Remove="img\file.png" />
    <None Remove="img\folder_closed.png" />
    <None Remove="img\folder_open.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AjaxControlToolkit" Version="20.1.0" />
    <PackageReference Include="Extended.Wpf.Toolkit" Version="4.3.0" />
    <PackageReference Include="freeglut" Version="2.8.1.15" />
    <PackageReference Include="Gameloop.Vdf" Version="0.6.1" />
    <PackageReference Include="Microsoft.CodeAnalysis" Version="4.1.0-1.final" />
    <PackageReference Include="Microsoft.CodeDom.Providers.DotNetCompilerPlatform" Version="3.6.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="5.0.0" />
    <PackageReference Include="Microsoft.Toolkit.Uwp.UI.Controls" Version="7.1.2" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../BinarySchema/BinarySchema.csproj" PrivateAssets="all" OutputItemType="Analyzer" />
    <ProjectReference Include="..\Bmd2Fbx\Bmd2Fbx.csproj" />
    <ProjectReference Include="..\F3dzex2ToFbx\F3dzex2ToFbx.csproj" />
    <ProjectReference Include="..\Fin\Fin.csproj" />
    <ProjectReference Include="..\Glo\Glo.csproj" />
    <ProjectReference Include="..\HaloWarsTools\HaloWarsTools.csproj" />
    <ProjectReference Include="..\Mod2Fbx\Mod2Fbx.csproj" />
    <ProjectReference Include="..\Utility of Time CSharp\Utility of Time CSharp.csproj" />
    <ProjectReference Include="..\Zar2Fbx\Zar2Fbx.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Tao.DevIl">
      <HintPath>..\Utility of Time\Tao GL Libs\Tao.DevIl.dll</HintPath>
    </Reference>
    <Reference Include="Tao.FreeGlut">
      <HintPath>..\Utility of Time\Tao GL Libs\Tao.FreeGlut.dll</HintPath>
    </Reference>
    <Reference Include="Tao.OpenGl">
      <HintPath>..\Utility of Time\Tao GL Libs\Tao.OpenGl.dll</HintPath>
    </Reference>
    <Reference Include="Tao.Platform.Windows">
      <HintPath>..\Utility of Time\Tao GL Libs\Tao.Platform.Windows.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="img\file.png" />
    <EmbeddedResource Include="img\folder_closed.png" />
    <EmbeddedResource Include="img\folder_open.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="src\ui\common\BGlPanel.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="src\ui\common\FileTreeView.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="src\ui\common\WaterMarkTextBox.cs">
      <SubType>Component</SubType>
    </Compile>
